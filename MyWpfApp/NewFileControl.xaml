<Window x:Class="MyWpfApp.NewFileControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewFileControl"
        Height="400"
        Width="600">
    <Grid Margin="10">
                <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Input Fields -->
            <RowDefinition Height="Auto"/>   <!-- ProductsDataGrid -->
            <RowDefinition Height="*"/>      <!-- Bottom section like GrandTotal -->
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Orientation="Horizontal"
                Margin="0,0,0,10">
            <Label Content="Product:"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="ProductTextBox"
                    Width="150"
                    Margin="5,0"
                    TextChanged="ProductTextBox_TextChanged"/>
            <Label Content="Rate:"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="RateTextBox"
                    Width="100"
                    Margin="5,0"/>
            <Label Content="Quantity:"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="QuantityTextBox"
                    Width="100"
                    Margin="5,0"
                    KeyDown="QtyTxtBox_KeyDown"/>
        </StackPanel>

        <!-- DataList -->
        <DataGrid x:Name="ProductsDataList"
                IsReadOnly="True"
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Single"
                Margin="10"
                VerticalAlignment="Top"
                Height="200"
                Visibility="Collapsed"
                PreviewKeyDown="ProductsDataList_PreviewKeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="PName"
                                    Header="Product Name"
                                    Binding="{Binding pname}"
                                    Width="*"
                                    FontFamily="SunTommy"/>
                <DataGridTextColumn Header="Rate"
                                    Binding="{Binding Rate2}"
                                    Width="*"/>
                <DataGridTextColumn Header="MRP"
                                    Binding="{Binding mrp}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Products DataGrid -->

        <DataGrid x:Name="ProductsDataGrid"
                  Grid.Row="2"
                  Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  PreviewKeyDown="ProductsDataGrid_PreviewKeyDown"
                  SelectionMode="Single"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column" 
                  Style="{DynamicResource MetroDataGrid}">
    <DataGrid.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="PNameNative"
                                    Header="Product"
                                    Binding="{Binding PName}"
                                    Width="*"/>
                <DataGridTextColumn Header="RATE"
                                    Binding="{Binding Rate2}"
                                    Width="*"/>
                <DataGridTextColumn Header="QTY"
                                    Binding="{Binding Quantity}"
                                    Width="*"/>
                <DataGridTextColumn Header="TotalAmount"
                                    Binding="{Binding Total}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Grand Total Section -->
        <Border Grid.Row="2"
                Background="LightYellow"
                CornerRadius="10"
                Padding="10"
                Margin="0,150,0,0"
                VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Grand Total: "
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="DarkBlue"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="GrandTotalTextBlock"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="DarkGreen"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
